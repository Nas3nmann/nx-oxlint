{
  "rules": {
    "no-unused-vars": "warn",
    "eqeqeq": "error",
    "no-console": "warn",
    "prefer-const": "error",
    "no-var": "error",
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "react/react-in-jsx-scope": "off",
    "react/jsx-key": "error",
    "react/no-deprecated": "warn"
  },
  "plugins": ["react", "import"],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
