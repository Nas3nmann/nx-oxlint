{
  "name": "nx-oxlint",
  "version": "0.0.0",
  "license": "MIT",
  "keywords": [
    "nx",
    "oxlint",
    "linter"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Nas3nmann/nx-oxlint",
    "directory": "tools/nx-oxlint"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@nx-oxlint/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/js:tsc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "tools/nx-oxlint/dist",
          "main": "tools/nx-oxlint/src/index.ts",
          "tsConfig": "tools/nx-oxlint/tsconfig.lib.json",
          "rootDir": "tools/nx-oxlint/src",
          "generatePackageJson": false,
          "assets": [
            {
              "input": "./tools/nx-oxlint/src",
              "glob": "**/!(*.ts)",
              "output": "."
            },
            {
              "input": "./tools/nx-oxlint/src",
              "glob": "**/*.d.ts",
              "output": "."
            }
          ]
        }
      }
    }
  },
  "dependencies": {
    "@nx/devkit": "21.5.2",
    "oxlint": "^1.15.0",
    "tslib": "^2.3.0"
  },
  "executors": "./executors.json",
  "files": [
    "dist",
    "!**/*.tsbuildinfo",
    "executors.json"
  ]
}
